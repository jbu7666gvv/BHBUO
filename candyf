-- 跨服自动加载器 (仅跨服启动)
if _G.UniversalLoaderExecuted then return end
_G.UniversalLoaderExecuted = true

local queueteleport = (syn and syn.queue_on_teleport) or queue_on_teleport or (fluxus and fluxus.queue_on_teleport)

if type(queueteleport) == "function" then
    local teleportCode = [[
        -- 跨服后加载脚本
        warn("[自动跨服] 开始加载脚本...")
        
        -- 加载第一个脚本
        pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/jbu7666gvv/BHBUO/refs/heads/main/CandyFarm2.lua"))()
        end)
        wait(0.5)
        
        -- 加载第二个脚本
        pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/jbu7666gvv/BHBUO/refs/heads/main/candyf"))()
        end)
        wait(0.5)
        
        warn("[自动跨服] 脚本加载完成")
    ]]
    
    queueteleport(teleportCode)
    warn("[自动跨服] 跨服功能已设置")
else
    warn("[自动跨服] 不支持跨服功能")
end
